<!-- This view is used to display a list of teams-->
<%provide(:title, "Teams")%>

<div class="container-fluid table-responsive">
	<h2 class="table-title"><span>Teams for 2017 Season</span></h2>
	<table class="table table-hover active">
		<thead>
    		<tr>
		      <th>Team Name</th>
		      <th>League</th>
		      <th>Conference</th>
		      <th>Conference Rank</th>
		      <th>Wins</th>
		      <th>Losses</th>
		      <th>Ties</th>
    		</tr>
  		</thead>
  		<tbody>

			<% @teams.each do |t| %>
			<tr>
				<td><%= link_to t.name, team_path(t) %></td>
				<td><%=t.league%></td>
				<td><%=t.conference%></td>
				<td>TODO</td>
				<td><%=t.wins%></td>
				<td><%=t.losses%></td>
				<td><%=t.overtime_losses%></td>
			</tr>
			<% end %>

		</tbody>
	</table>
</div>
