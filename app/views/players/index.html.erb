<!--This page will be used to list players-->

<div class="container-fluid table-responsive">
	<h2 class="table-title"><span>Team Name</span></h2>
	<table class="table table-hover active">
		<thead>
    		<tr>
		      <th>Player Name</th>
		      <th>Nick Name</th>
		      <th>Position</th>
		      <th>Goals</th>
		      <th>Assists</th>
		      <th>Points</th>
    		</tr>
  		</thead>
  		<tbody>

			<% @players.each do |player| %>
				<tr>
					<td><%= link_to (player.first_name + " " + player.last_name), player_path(player.id) %></td>
					<td><%= player.nickname %></td>
					<td><%= player.position %></td>
					<td><%= player.goals %></td>
					<td><%= player.assists %></td>
					<td></td>
				</tr>
			<% end %>

			<% if @players.size == 0 %>
				<em>No Players Found</em>
			<% end %>

		</tbody>
	</table>
</div>
